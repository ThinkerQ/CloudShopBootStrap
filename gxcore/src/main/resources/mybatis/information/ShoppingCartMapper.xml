<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ShoppingCartMapper">
	
	
	<!-- 新增-->
	<insert id="save" parameterType="pd" useGeneratedKeys="true" keyProperty="shoppingcart_ID">
		insert into T_shoppingcart(
			userId,
			periodsId,
			participantCount,
			createTime
		) values (
			#{userId},	
			#{periodsId},	
			#{participantCount},	
			#{createTime}
		)
	</insert>
	
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from T_shoppingcart
		where 
			shoppingcart_ID = #{shoppingcart_ID}
	</delete>
	
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update  T_shoppingcart
			set 
			where
				shoppingcart_ID = #{shoppingcart_ID}
	</update>
	
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
			userId,
			periodsId,
			participantCount,
			createTime,
			shoppingcart_ID
		from 
			T_shoppingcart
		where 
			shoppingcart_ID = #{shoppingcart_ID}
	</select>

    <sql id="selectSql">

        	a.userId,
        	a.periodsId,
        	a.participantCount,
        	a.createTime,
            a.shoppingcart_ID
	</sql>

    <!-- 列表 -->
    <select id="datalistPage" parameterType="page" resultType="pd">
		select
        	<include refid="selectSql"/>
		from
				T_shoppingcart a
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
        <include refid="selectSql"/>
		from
				T_shoppingcart a
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from T_shoppingcart
		where 
			shoppingcart_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
</mapper>